<div class = "container">
  <div class = "row">
    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
              <th></th>
              <th>title</th>
              <th>tag</th>
              <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
          <tr>
            <td><%= link_to article.title, article_path(article) %></td>
            <td>タグ</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
