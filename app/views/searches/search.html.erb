<div class="container">
  <% if @model == 'article' || @model == 'tag' %>
    <h3>検索結果 "<%= @content %>"</h3>
    <div class = "container">
      <div class = "row">
        <div class = "col-md-8 offset-md-1">
          <h2>記事一覧</h2>
          <table class="table table-hover">
            <thead>
              <tr>
                  <th>投稿者名</th>
                  <th>title</th>
                  <th></th>
                  <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @records.each do |article| %>
                <%= render 'commons/articles', article: article %>
              <% end %>
            </tbody>
          </table>
          <%= link_to new_article_path do %>
            <div class="float_btn">
              <i class="fa fa-plus"></i>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>