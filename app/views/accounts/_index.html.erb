<% users.each do |user| %>
  <tr>
    <td><%= image_tag user.avatar_image, size: '100x100' %></td>
    <td> <%= user.name %></td>
    <td><p>フォロー数：<%= user.followings.count  %></p></td>
    <td><p>フォロワー数：<%= user.followers.count %></p></td>
    <td>
      <% if current_user != user %>
        <% if current_user &. following?(user) %>
          <%= link_to 'Unfollow',account_relationships_path(user), data: {method: 'delete' } %>
        <% else %>
          <%= link_to 'Follow', account_relationships_path(user), data: {method: 'post'} %>
        <% end %>
      <% end %>
    </td>
    <td><%= link_to "Show", account_path(user) %></td>
  </tr>
<% end %>